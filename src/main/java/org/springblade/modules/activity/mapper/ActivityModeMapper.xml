<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.modules.activity.mapper.ActivityModeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="activityModeResultMap" type="org.springblade.modules.activity.entity.ActivityMode">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="activity_name" property="activityName"/>
        <result column="address" property="address"/>
        <result column="activity_time" property="activityTime"/>
        <result column="activity_description" property="activityDescription"/>
        <result column="activity_case" property="activityCase"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectActivityModePage" resultMap="activityModeResultMap">
        select * from activity_mode where is_deleted = 0
    </select>

</mapper>
