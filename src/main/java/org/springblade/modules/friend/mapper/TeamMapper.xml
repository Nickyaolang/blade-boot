<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.modules.friend.mapper.TeamMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="teamResultMap" type="org.springblade.modules.friend.entity.Team">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="users" property="users"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="create_user" property="createUser"/>
        <result column="create_user_name" property="createUserName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectTeamPage" resultMap="teamResultMap">
        select * from team where is_deleted = 0
    </select>

</mapper>
